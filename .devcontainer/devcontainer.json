{
  "name": "Soroban Examples",
  "dockerFile": "Dockerfile",
  "context": "..",
  containerEnv: {
	"REGISTRY": "docker.io",
	"REGISTRY-OWNER": "stellar",
	"PREBUILD_IMG": "vsc-soroban-examples-prebuild"
  },
  "build": {
	"cacheFrom": [
	  "${containerEnv:REGISTRY}/${containerEnv:REGISTRY-OWNER}/${containerEnv:PREBUILD_IMG}"
	],
	"args": {
	  "BUILDKIT_INLINE_CACHE": "1"
	},
	"options": [
	  "--output",
	  "type=image,name=docker.io/chrisstellar/vsc-soroban-examples-prebuild:image,compression=zstd,push=true",
	  "--quiet",
	  "--import-cache",
	  "type=registry,ref=docker.io/chrisstellar/vsc-soroban-examples-prebuild",
	  "--import-cache",
	  "type=inline",
	  "--export-cache",
	  "type=inline",
	  "--export-cache",
	  "type=registry,ref=docker.io/chrisstellar/vsc-soroban-examples-prebuild,mode=max,image-manifest=true,oci-mediatypes=true,compression=zstd",
	]
  },
  "hostRequirements": {
	"cpus": 4,
	"memory": "16",
	"storage": "32"
  },
  "forwardPorts": [
	4226
  ],
  "portsAttributes": {
	"4226": {
	  "label": "sccache"
	}
  },
  "features": {
	"ghcr.io/devcontainers/features/common-utils:2.5.3": {
	  "configureZshAsDefaultShell": false,
	  "installOhMyZsh": false,
	  "installOhMyZshConfig": false
	},
	"ghcr.io/devcontainers/features/rust:1.3.3": {
	  "targets": "wasm32-unknown-unknown",
	  "profile": "minimal",
	  "version": "1.81"
	},
	"ghcr.io/devcontainers-extra/features/gh-release:1.0.25": {
	  "repo": "stellar/stellar-cli",
	  "binaryNames": "stellar",
	  "version": "22.8.0"
	},
	"ghcr.io/rapidsai/devcontainers/features/sccache:25.8.0": {
	  "repository": "mozilla/sccache",
	  "version": "0.10.0"
	}
  },
  "customizations": {
	"codespaces": {
	  "openFiles": [
		"README.md"
	  ]
	},
	"vscode": {
	  "extensions": [
		"rust-lang.rust-analyzer",
		"tamasfe.even-better-toml"
	  ],
	  "settings": {
		"workbench.settings.editor": "json",
		"workbench.settings.useSplitJSON": true,
		"npm.autoDetect": "off",
		"telemetry.feedback.enabled": false,
		"workbench.tips.enabled": false,
		"editor.codeLens": false,
		"editor.minimap.enabled": false,
		"terminal.integrated.sendKeybindingsToShell": true,
		"rust-analyzer.check.allTargets": false,
		"rust-analyzer.cargo.allTargets": false,
		"rust-analyzer.procMacro.attributes.enable": false,
		"rust-analyzer.lens.enable": false,
		"files.readonlyInclude": {
		  "**/.cargo/registry/src/**/*.rs": true,
		  "**/.cargo/git/checkouts/**/*.rs": true,
		  "**/lib/rustlib/src/rust/library/**/*.rs": true
		}
	  }
	}
  },
  "initializeCommand": "",
  "onCreateCommand": "chmod -R +x .devcontainer/",
  "updateContentCommand": "",
  "postCreateCommand": "",
  "postStartCommand": ".devcontainer/ps_autocomplete.sh",
  "postAttachCommand": {
	"stellar-account": ".devcontainer/pa_stellar_accounts.sh",
	"welcome-text": ".devcontainer/pa_welcome_text.sh"
  },
  "waitFor": "postStartCommand"
}
